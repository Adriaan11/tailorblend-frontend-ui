@page "/"
@page "/home"

<PageTitle>TailorBlend – Personalized Supplement Intelligence</PageTitle>

<!-- Hero Section -->
<section class="tb-hero">
    <div class="tb-container">
        <div class="tb-hero__content">
            <div class="tb-hero__eyebrow">
                <div class="tb-badge">
                    <MudIcon Icon="@Icons.Material.Filled.AutoAwesome" Size="Size.Small" />
                    Tailored AI Guidance
                </div>
            </div>

            <h1 class="tb-hero__title">
                Design evidence-based supplement blends with a conversational expert.
            </h1>

            <p class="tb-hero__subtitle">
                TailorBlend translates health goals, habits, and constraints into a precise formulation roadmap.
                Collaborate with an AI consultant that speaks the language of functional wellness.
            </p>

            <div class="tb-hero__actions">
                <a href="/chat" class="tb-btn tb-btn--primary">
                    <MudIcon Icon="@Icons.Material.Filled.RocketLaunch" />
                    <span>Start Consultation</span>
                </a>
                <a href="/configuration" class="tb-btn tb-btn--secondary">
                    <MudIcon Icon="@Icons.Material.Filled.Tune" />
                    <span>Configure Agent</span>
                </a>
            </div>

            <div class="tb-hero__chips tb-scroll-row" aria-label="Key TailorBlend capabilities">
                <span class="tb-chip">Adaptive assessments</span>
                <span class="tb-chip">Ingredient intelligence</span>
                <span class="tb-chip">Evidence-backed outputs</span>
            </div>
        </div>
    </div>
</section>

<!-- Stats Card -->
<section class="tb-section">
    <div class="tb-container">
        <div class="tb-card">
            <div class="tb-section__header">
                <p class="tb-text-caption">Live Session Snapshot</p>
            </div>
            <div class="tb-metric-grid">
                <div class="tb-metric">
                    <span class="tb-metric__label">Avg. response time</span>
                    <p class="tb-metric__value">2.4s</p>
                </div>
                <div class="tb-metric">
                    <span class="tb-metric__label">Blends generated</span>
                    <p class="tb-metric__value">12,482</p>
                </div>
            </div>
            <div class="tb-divider"></div>
            <div class="tb-callout">
                <span class="tb-metric__label">Next best step</span>
                <p class="tb-callout__title">Share your primary goal and current stack.</p>
                <p class="tb-callout__text">
                    TailorBlend maps the consultation journey and highlights nutrient gaps in minutes.
                </p>
            </div>
        </div>
    </div>
</section>

<!-- Feature Cards -->
<section class="tb-section">
    <div class="tb-container">
        <div class="tb-section__header">
            <h2 class="tb-section__title">Built for clinical clarity</h2>
            <p class="tb-section__subtitle">
                Every interaction is optimized for touch, comprehension, and practitioner-grade decision making.
            </p>
        </div>
        <div class="tb-feature-grid">
            <div class="tb-card tb-card--feature">
                <div class="tb-icon-container tb-icon-container--accent">
                    <MudIcon Icon="@Icons.Material.Filled.Chat" Color="Color.Success" Style="font-size: 1.5rem;" />
                </div>
                <h3 class="tb-heading-md">Conversational intake</h3>
                <p class="tb-copy">
                    Guided discovery captures context the way a practitioner would—no rigid forms, just fluid dialog.
                </p>
            </div>

            <div class="tb-card tb-card--feature">
                <div class="tb-icon-container tb-icon-container--info">
                    <MudIcon Icon="@Icons.Material.Filled.Science" Color="Color.Info" Style="font-size: 1.5rem;" />
                </div>
                <h3 class="tb-heading-md">Ingredient intelligence</h3>
                <p class="tb-copy">
                    Recommendations draw on curated research, safe dosing ranges, and compatibility checks built for clinicians.
                </p>
            </div>

            <div class="tb-card tb-card--feature">
                <div class="tb-icon-container tb-icon-container--warning">
                    <MudIcon Icon="@Icons.Material.Filled.Insights" Color="Color.Warning" Style="font-size: 1.5rem;" />
                </div>
                <h3 class="tb-heading-md">Transparent economics</h3>
                <p class="tb-copy">
                    Track tokens and cost in real time so every consult stays profitable without compromising care.
                </p>
            </div>
        </div>
    </div>
</section>

<!-- How It Works -->
<section class="tb-section">
    <div class="tb-container">
        <div class="tb-card tb-card--flat">
            <div class="tb-section__header">
                <p class="tb-text-caption">How it works</p>
                <h2 class="tb-section__title">TailorBlend in three guided steps</h2>
                <p class="tb-section__subtitle">
                    Each stage keeps you oriented so your next action is always obvious—no guesswork required.
                </p>
            </div>
            <div class="tb-step-list">
                <div class="tb-step">
                    <div class="tb-icon-container tb-icon-container--accent tb-icon-container--sm">
                        <MudIcon Icon="@Icons.Material.Filled.QuestionAnswer" Color="Color.Success" />
                    </div>
                    <div>
                        <h4 class="tb-step__title">Consult</h4>
                        <p class="tb-step__text">
                            Describe health objectives, training load, sleep patterns, stress, and dietary realities.
                        </p>
                    </div>
                </div>
                <div class="tb-step">
                    <div class="tb-icon-container tb-icon-container--info tb-icon-container--sm">
                        <MudIcon Icon="@Icons.Material.Filled.AutoGraph" Color="Color.Info" />
                    </div>
                    <div>
                        <h4 class="tb-step__title">Analyze</h4>
                        <p class="tb-step__text">
                            TailorBlend synthesizes the conversation, checks constraints, and drafts a structured protocol.
                        </p>
                    </div>
                </div>
                <div class="tb-step">
                    <div class="tb-icon-container tb-icon-container--warning tb-icon-container--sm">
                        <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Color="Color.Warning" />
                    </div>
                    <div>
                        <h4 class="tb-step__title">Deliver</h4>
                        <p class="tb-step__text">
                            Receive dosage-ready formulas, sourcing suggestions, and talking points for your clients.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Final CTA -->
<section class="tb-section">
    <div class="tb-container">
        <div class="tb-card tb-cta-card">
            <h2 class="tb-heading-lg">
                Ready to craft a smarter supplement strategy?
            </h2>
            <p>
                Join practitioners and patients already using TailorBlend for personalized, evidence-based supplement recommendations.
            </p>
            <a href="/chat" class="tb-btn tb-btn--primary">
                <MudIcon Icon="@Icons.Material.Filled.Bolt" />
                <span>Launch the consultant</span>
            </a>
        </div>
    </div>
</section>
