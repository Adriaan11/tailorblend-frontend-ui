@page "/"
@page "/home"
@inject NavigationManager NavManager

<PageTitle>TailorBlend – Personalized Supplement Intelligence</PageTitle>

<!-- Hero Section -->
<section class="tb-hero">
    <div class="tb-hero__glow"></div>
    <div class="tb-container">
        <div class="tb-hero__grid">
            <div class="tb-hero__content">
                <div class="tb-hero__eyebrow">
                    <TbIcon Icon="sparkles" Size="sm" />
                    Tailored AI Guidance
                </div>

                <h1 class="tb-hero__title">
                    Design evidence-based supplement blends with a conversational expert.
                </h1>

                <p class="tb-hero__subtitle">
                    TailorBlend translates health goals, habits, and constraints into a precise formulation roadmap.
                    Collaborate with an AI consultant that speaks the language of functional wellness.
                </p>

                <div class="tb-hero__cta">
                    <TbButton Variant="filled" Color="primary" Class="tb-hero__cta-btn" StartIcon="rocket" @onclick="@(() => NavManager.NavigateTo("/chat"))">
                        <span>Start Consultation</span>
                    </TbButton>
                    <TbButton Variant="outlined" Color="primary" Class="tb-hero__cta-btn" StartIcon="sliders" @onclick="@(() => NavManager.NavigateTo("/configuration"))">
                        <span>Configure Agent</span>
                    </TbButton>
                </div>

                <div class="tb-hero__chips">
                    <span class="tb-chip">Adaptive assessments</span>
                    <span class="tb-chip">Ingredient intelligence</span>
                    <span class="tb-chip">Evidence-backed outputs</span>
                </div>
            </div>

            <aside class="tb-hero__panel">
                <div class="tb-panel">
                    <div class="tb-panel__header">
                        <div>
                            <p class="tb-text-caption">Live session snapshot</p>
                            <h3 class="tb-panel__title">Confidence, clarity, speed</h3>
                        </div>
                        <div class="tb-panel__icon">
                            <TbIcon Icon="bolt" Size="lg" />
                        </div>
                    </div>

                    <div class="tb-panel__metrics">
                        <div class="tb-metric">
                            <span class="tb-metric__label">Avg. response time</span>
                            <span class="tb-metric__value">2.4s</span>
                        </div>
                        <div class="tb-metric">
                            <span class="tb-metric__label">Blends generated</span>
                            <span class="tb-metric__value">12,482</span>
                        </div>
                        <div class="tb-metric">
                            <span class="tb-metric__label">Practitioner CSAT</span>
                            <span class="tb-metric__value">4.9/5</span>
                        </div>
                    </div>

                    <div class="tb-panel__note">
                        <p class="tb-panel__note-label">Next best step</p>
                        <p class="tb-panel__note-text">
                            Share your primary goal and current stack to instantly map nutrient priorities and constraints.
                        </p>
                    </div>
                </div>
            </aside>
        </div>
    </div>
</section>

<!-- Feature Section -->
<section class="tb-section">
    <div class="tb-container">
        <div class="tb-section__header">
            <p class="tb-eyebrow">Why TailorBlend</p>
            <h2 class="tb-section__title">An elegant workflow for modern practitioners</h2>
            <p class="tb-section__subtitle">
                Keep the brand palette, gain a contemporary interface—purpose-built for conversations that turn into precise formulations.
            </p>
        </div>

        <div class="tb-feature-grid">
            <article class="tb-feature-card">
                <div class="tb-feature-card__icon tb-feature-card__icon--accent">
                    <TbIcon Icon="comments" Size="lg" />
                </div>
                <h3>Conversational intake</h3>
                <p>
                    Guided discovery captures context the way a practitioner would—no rigid forms, just fluid dialog.
                </p>
                <ul>
                    <li>Adaptive follow-ups for clarity</li>
                    <li>Structured notes ready for EMR</li>
                </ul>
            </article>

            <article class="tb-feature-card">
                <div class="tb-feature-card__icon tb-feature-card__icon--info">
                    <TbIcon Icon="flask" Size="lg" />
                </div>
                <h3>Ingredient intelligence</h3>
                <p>
                    Recommendations draw on curated research, safe dosing ranges, and compatibility checks built for clinicians.
                </p>
                <ul>
                    <li>Clinician-tuned guardrails</li>
                    <li>Research citations baked in</li>
                </ul>
            </article>

            <article class="tb-feature-card">
                <div class="tb-feature-card__icon tb-feature-card__icon--warning">
                    <TbIcon Icon="lightbulb" Size="lg" />
                </div>
                <h3>Transparent economics</h3>
                <p>
                    Track tokens and cost in real time so every consult stays profitable without compromising care.
                </p>
                <ul>
                    <li>Live session telemetry</li>
                    <li>Cost controls per workflow</li>
                </ul>
            </article>
        </div>
    </div>
</section>

<!-- Process Section -->
<section class="tb-section tb-section--muted">
    <div class="tb-container">
        <div class="tb-section__header">
            <p class="tb-eyebrow">How it works</p>
            <h2 class="tb-section__title">From consult to dosage-ready protocol</h2>
        </div>

        <div class="tb-process">
            <div class="tb-process__step">
                <div class="tb-step-number">01</div>
                <div>
                    <h4>Consult</h4>
                    <p>Describe your objectives, training load, habits, and dietary realities.</p>
                </div>
            </div>

            <div class="tb-process__step">
                <div class="tb-step-number">02</div>
                <div>
                    <h4>Analyze</h4>
                    <p>TailorBlend synthesizes the conversation, checks constraints, and drafts a structured protocol.</p>
                </div>
            </div>

            <div class="tb-process__step">
                <div class="tb-step-number">03</div>
                <div>
                    <h4>Deliver</h4>
                    <p>Receive dosage-ready formulas, sourcing suggestions, and client talking points.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Final CTA -->
<section class="tb-section">
    <div class="tb-container">
        <div class="tb-cta-card">
            <div>
                <p class="tb-eyebrow">Get started</p>
                <h2>Ready to craft a smarter supplement strategy?</h2>
                <p>
                    Join practitioners already using TailorBlend for personalized, evidence-based recommendations with a refreshed, elegant interface.
                </p>
            </div>
            <div class="tb-cta-card__actions">
                <TbButton Variant="filled" Color="primary" StartIcon="bolt" Class="tb-hero__cta-btn" @onclick="@(() => NavManager.NavigateTo("/chat"))">
                    <span>Launch the consultant</span>
                </TbButton>
                <TbButton Variant="outlined" Color="primary" StartIcon="arrow-right" Class="tb-hero__cta-btn" @onclick="@(() => NavManager.NavigateTo("/configuration"))">
                    <span>Review configuration</span>
                </TbButton>
            </div>
        </div>
    </div>
</section>
