@page "/"
@page "/home"

<PageTitle>TailorBlend – Personalized Supplement Intelligence</PageTitle>

<!-- Hero Section -->
<section class="tb-hero">
    <div class="tb-badge" style="margin: 0 auto var(--tb-space-16);">
        <MudIcon Icon="@Icons.Material.Filled.AutoAwesome" Size="Size.Small" />
        Tailored AI Guidance
    </div>

    <h1 class="tb-hero__title">
        Design evidence-based supplement blends with a conversational expert.
    </h1>

    <p class="tb-hero__subtitle">
        TailorBlend translates health goals, habits, and constraints into a precise formulation roadmap.
        Collaborate with an AI consultant that speaks the language of functional wellness.
    </p>

    <!-- CTAs -->
    <div style="display: flex; flex-direction: column; gap: var(--tb-space-12); max-width: 400px; margin: 0 auto var(--tb-space-24);">
        <a href="/chat" class="tb-btn tb-btn--primary" style="text-decoration: none; width: 100%;">
            <MudIcon Icon="@Icons.Material.Filled.RocketLaunch" />
            <span>Start Consultation</span>
        </a>
        <a href="/configuration" class="tb-btn tb-btn--secondary" style="text-decoration: none; width: 100%;">
            <MudIcon Icon="@Icons.Material.Filled.Tune" />
            <span>Configure Agent</span>
        </a>
    </div>

    <!-- Feature Chips -->
    <div style="display: flex; flex-wrap: wrap; gap: var(--tb-space-8); justify-content: center; margin-bottom: var(--tb-space-32);">
        <span class="tb-chip">Adaptive assessments</span>
        <span class="tb-chip">Ingredient intelligence</span>
        <span class="tb-chip">Evidence-backed outputs</span>
    </div>
</section>

<!-- Stats Card -->
<div class="tb-container" style="margin-bottom: var(--tb-space-48);">
    <div class="tb-card" style="text-align: center;">
        <p style="font-size: 0.875rem; font-weight: 600; color: var(--tb-gray-600); text-transform: uppercase; letter-spacing: 0.05em; margin-bottom: var(--tb-space-16);">
            Live Session Snapshot
        </p>
        <div class="tb-grid" style="grid-template-columns: repeat(auto-fit, minmax(140px, 1fr)); margin-bottom: var(--tb-space-16);">
            <div>
                <p style="font-size: 0.75rem; color: var(--tb-gray-500); margin-bottom: var(--tb-space-4);">Avg. response time</p>
                <p style="font-size: 1.75rem; font-weight: 700; color: var(--tb-gray-900);">2.4s</p>
            </div>
            <div>
                <p style="font-size: 0.75rem; color: var(--tb-gray-500); margin-bottom: var(--tb-space-4);">Blends generated</p>
                <p style="font-size: 1.75rem; font-weight: 700; color: var(--tb-gray-900);">12,482</p>
            </div>
        </div>
        <div class="tb-divider"></div>
        <div style="padding: var(--tb-space-16); background: var(--tb-accent-soft); border-radius: var(--tb-radius-lg); text-align: left;">
            <p style="font-size: 0.75rem; color: var(--tb-gray-600); margin-bottom: var(--tb-space-4);">Next best step</p>
            <p style="font-weight: 600; margin-bottom: var(--tb-space-8); color: var(--tb-gray-900);">
                Share your primary goal and current stack.
            </p>
            <p style="font-size: 0.875rem; color: var(--tb-gray-600);">
                TailorBlend maps the consultation journey and highlights nutrient gaps in minutes.
            </p>
        </div>
    </div>
</div>

<!-- Feature Cards -->
<div class="tb-container" style="margin-bottom: var(--tb-space-48);">
    <div class="tb-grid" style="grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));">
        <div class="tb-card">
            <div style="width: 48px; height: 48px; border-radius: var(--tb-radius); background: var(--tb-accent-soft); display: flex; align-items: center; justify-content: center; margin-bottom: var(--tb-space-16);">
                <MudIcon Icon="@Icons.Material.Filled.Chat" Color="Color.Success" Style="font-size: 1.5rem;" />
            </div>
            <h3 style="font-size: 1.125rem; font-weight: 600; margin-bottom: var(--tb-space-8); color: var(--tb-gray-900);">
                Conversational intake
            </h3>
            <p style="color: var(--tb-gray-600); line-height: 1.6;">
                Guided discovery captures context the way a practitioner would—no rigid forms, just fluid dialog.
            </p>
        </div>

        <div class="tb-card">
            <div style="width: 48px; height: 48px; border-radius: var(--tb-radius); background: rgba(99, 102, 241, 0.1); display: flex; align-items: center; justify-content: center; margin-bottom: var(--tb-space-16);">
                <MudIcon Icon="@Icons.Material.Filled.Science" Color="Color.Info" Style="font-size: 1.5rem;" />
            </div>
            <h3 style="font-size: 1.125rem; font-weight: 600; margin-bottom: var(--tb-space-8); color: var(--tb-gray-900);">
                Ingredient intelligence
            </h3>
            <p style="color: var(--tb-gray-600); line-height: 1.6;">
                Recommendations draw on curated research, safe dosing ranges, and compatibility checks built for clinicians.
            </p>
        </div>

        <div class="tb-card">
            <div style="width: 48px; height: 48px; border-radius: var(--tb-radius); background: rgba(245, 158, 11, 0.1); display: flex; align-items: center; justify-content: center; margin-bottom: var(--tb-space-16);">
                <MudIcon Icon="@Icons.Material.Filled.Insights" Color="Color.Warning" Style="font-size: 1.5rem;" />
            </div>
            <h3 style="font-size: 1.125rem; font-weight: 600; margin-bottom: var(--tb-space-8); color: var(--tb-gray-900);">
                Transparent economics
            </h3>
            <p style="color: var(--tb-gray-600); line-height: 1.6;">
                Track tokens and cost in real time so every consult stays profitable without compromising care.
            </p>
        </div>
    </div>
</div>

<!-- How It Works -->
<div class="tb-container" style="margin-bottom: var(--tb-space-48);">
    <div class="tb-card tb-card--flat" style="background: var(--tb-surface); padding: var(--tb-space-24);">
        <p style="font-size: 0.875rem; font-weight: 600; color: var(--tb-gray-500); text-transform: uppercase; letter-spacing: 0.05em; margin-bottom: var(--tb-space-24);">
            How it works
        </p>

        <div style="display: flex; flex-direction: column; gap: var(--tb-space-24);">
            <!-- Step 1 -->
            <div style="display: flex; gap: var(--tb-space-16); align-items: flex-start;">
                <div style="width: 40px; height: 40px; border-radius: 50%; background: var(--tb-accent-soft); display: flex; align-items: center; justify-content: center; flex-shrink: 0;">
                    <MudIcon Icon="@Icons.Material.Filled.QuestionAnswer" Color="Color.Success" />
                </div>
                <div>
                    <h4 style="font-weight: 600; margin-bottom: var(--tb-space-4); color: var(--tb-gray-900);">Consult</h4>
                    <p style="color: var(--tb-gray-600); line-height: 1.6;">
                        Describe health objectives, training load, sleep patterns, stress, and dietary realities.
                    </p>
                </div>
            </div>

            <!-- Step 2 -->
            <div style="display: flex; gap: var(--tb-space-16); align-items: flex-start;">
                <div style="width: 40px; height: 40px; border-radius: 50%; background: rgba(99, 102, 241, 0.1); display: flex; align-items: center; justify-content: center; flex-shrink: 0;">
                    <MudIcon Icon="@Icons.Material.Filled.AutoGraph" Color="Color.Info" />
                </div>
                <div>
                    <h4 style="font-weight: 600; margin-bottom: var(--tb-space-4); color: var(--tb-gray-900);">Analyze</h4>
                    <p style="color: var(--tb-gray-600); line-height: 1.6;">
                        TailorBlend synthesizes the conversation, checks constraints, and drafts a structured protocol.
                    </p>
                </div>
            </div>

            <!-- Step 3 -->
            <div style="display: flex; gap: var(--tb-space-16); align-items: flex-start;">
                <div style="width: 40px; height: 40px; border-radius: 50%; background: rgba(245, 158, 11, 0.1); display: flex; align-items: center; justify-content: center; flex-shrink: 0;">
                    <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Color="Color.Warning" />
                </div>
                <div>
                    <h4 style="font-weight: 600; margin-bottom: var(--tb-space-4); color: var(--tb-gray-900);">Deliver</h4>
                    <p style="color: var(--tb-gray-600); line-height: 1.6;">
                        Receive dosage-ready formulas, sourcing suggestions, and talking points for your clients.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Final CTA -->
<div class="tb-container" style="margin-bottom: var(--tb-space-64);">
    <div class="tb-card" style="text-align: center; padding: var(--tb-space-32) var(--tb-space-24);">
        <h2 style="font-size: 1.5rem; font-weight: 700; margin-bottom: var(--tb-space-16); color: var(--tb-gray-900);">
            Ready to craft a smarter supplement strategy?
        </h2>
        <p style="color: var(--tb-gray-600); line-height: 1.6; max-width: 520px; margin: 0 auto var(--tb-space-24);">
            Join practitioners and patients already using TailorBlend for personalized, evidence-based supplement recommendations.
        </p>
        <a href="/chat" class="tb-btn tb-btn--primary" style="text-decoration: none;">
            <MudIcon Icon="@Icons.Material.Filled.Bolt" />
            <span>Launch the consultant</span>
        </a>
    </div>
</div>
