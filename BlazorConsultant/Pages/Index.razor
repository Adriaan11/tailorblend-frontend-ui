@page "/"
@page "/home"
@inject NavigationManager NavManager

<PageTitle>TailorBlend – Personalized Supplement Intelligence</PageTitle>

<!-- Hero Section -->
<section class="tb-hero">
    <div class="tb-badge" style="margin: 0 auto var(--tb-space-16);">
        <TbIcon Icon="sparkles" Size="sm" />
        Tailored AI Guidance
    </div>

    <h1 class="tb-hero__title">
        Design evidence-based supplement blends with a conversational expert.
    </h1>

    <p class="tb-hero__subtitle">
        TailorBlend translates health goals, habits, and constraints into a precise formulation roadmap.
        Collaborate with an AI consultant that speaks the language of functional wellness.
    </p>

    <!-- CTAs -->
    <div style="display: flex; flex-direction: column; gap: var(--tb-space-12); max-width: 400px; margin: 0 auto var(--tb-space-24);">
        <TbButton Variant="filled" Color="primary" @onclick="@(() => NavManager.NavigateTo("/chat"))" StartIcon="rocket" Style="width: 100%; padding: var(--tb-space-12) var(--tb-space-24);">
            <span>Start Consultation</span>
        </TbButton>
        <TbButton Variant="outlined" Color="primary" @onclick="@(() => NavManager.NavigateTo("/configuration"))" StartIcon="sliders" Style="width: 100%; padding: var(--tb-space-12) var(--tb-space-24);">
            <span>Configure Agent</span>
        </TbButton>
    </div>

    <!-- Feature Chips -->
    <div style="display: flex; flex-wrap: wrap; gap: var(--tb-space-8); justify-content: center; margin-bottom: var(--tb-space-32);">
        <span class="tb-chip">Adaptive assessments</span>
        <span class="tb-chip">Ingredient intelligence</span>
        <span class="tb-chip">Evidence-backed outputs</span>
    </div>
</section>

<!-- Stats Card -->
<div class="tb-container" style="margin-bottom: var(--tb-space-48);">
    <div class="tb-card" style="text-align: center;">
        <p class="tb-text-caption">Live Session Snapshot</p>
        <div class="tb-grid" style="grid-template-columns: repeat(auto-fit, minmax(140px, 1fr)); margin-bottom: var(--tb-space-16);">
            <div>
                <p style="font-size: 0.75rem; color: var(--text-muted); margin-bottom: var(--tb-space-4);">Avg. response time</p>
                <p style="font-size: 1.75rem; font-weight: 700; color: var(--text-primary);">2.4s</p>
            </div>
            <div>
                <p style="font-size: 0.75rem; color: var(--text-muted); margin-bottom: var(--tb-space-4);">Blends generated</p>
                <p style="font-size: 1.75rem; font-weight: 700; color: var(--text-primary);">12,482</p>
            </div>
        </div>
        <div class="tb-divider"></div>
        <div style="padding: var(--tb-space-16); background: var(--tb-accent-soft); border-radius: var(--tb-radius-lg); text-align: left;">
            <p style="font-size: 0.75rem; color: var(--text-muted); margin-bottom: var(--tb-space-4);">Next best step</p>
            <p style="font-weight: 600; margin-bottom: var(--tb-space-8); color: var(--text-primary);">
                Share your primary goal and current stack.
            </p>
            <p style="font-size: 0.875rem; color: var(--text-secondary);">
                TailorBlend maps the consultation journey and highlights nutrient gaps in minutes.
            </p>
        </div>
    </div>
</div>

<!-- Feature Cards -->
<div class="tb-container" style="margin-bottom: var(--tb-space-48);">
    <div class="tb-grid" style="grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));">
        <div class="tb-card">
            <div class="tb-icon-container tb-icon-container--accent">
                <TbIcon Icon="comments" Color="success" Size="lg" Style="font-size: 1.5rem;" />
            </div>
            <h3 class="tb-heading-md">Conversational intake</h3>
            <p style="color: var(--text-secondary); line-height: 1.6;">
                Guided discovery captures context the way a practitioner would—no rigid forms, just fluid dialog.
            </p>
        </div>

        <div class="tb-card">
            <div class="tb-icon-container tb-icon-container--info">
                <TbIcon Icon="flask" Color="info" Size="lg" Style="font-size: 1.5rem;" />
            </div>
            <h3 class="tb-heading-md">Ingredient intelligence</h3>
            <p style="color: var(--text-secondary); line-height: 1.6;">
                Recommendations draw on curated research, safe dosing ranges, and compatibility checks built for clinicians.
            </p>
        </div>

        <div class="tb-card">
            <div class="tb-icon-container tb-icon-container--warning">
                <TbIcon Icon="lightbulb" Color="warning" Size="lg" Style="font-size: 1.5rem;" />
            </div>
            <h3 class="tb-heading-md">Transparent economics</h3>
            <p style="color: var(--text-secondary); line-height: 1.6;">
                Track tokens and cost in real time so every consult stays profitable without compromising care.
            </p>
        </div>
    </div>
</div>

<!-- How It Works -->
<div class="tb-container" style="margin-bottom: var(--tb-space-48);">
    <div class="tb-card tb-card--flat" style="background: var(--tb-surface); padding: var(--tb-space-24);">
        <p class="tb-text-caption">How it works</p>

        <div style="display: flex; flex-direction: column; gap: var(--tb-space-24);">
            <!-- Step 1 -->
            <div style="display: flex; gap: var(--tb-space-16); align-items: flex-start;">
                <div class="tb-icon-container--sm tb-icon-container tb-icon-container--accent">
                    <TbIcon Icon="comments" Color="success" Size="md" />
                </div>
                <div>
                    <h4 style="font-weight: 600; margin-bottom: var(--tb-space-4); color: var(--text-primary);">Consult</h4>
                    <p style="color: var(--text-secondary); line-height: 1.6;">
                        Describe health objectives, training load, sleep patterns, stress, and dietary realities.
                    </p>
                </div>
            </div>

            <!-- Step 2 -->
            <div style="display: flex; gap: var(--tb-space-16); align-items: flex-start;">
                <div class="tb-icon-container--sm tb-icon-container tb-icon-container--info">
                    <TbIcon Icon="chart-line" Color="info" Size="md" />
                </div>
                <div>
                    <h4 style="font-weight: 600; margin-bottom: var(--tb-space-4); color: var(--text-primary);">Analyze</h4>
                    <p style="color: var(--text-secondary); line-height: 1.6;">
                        TailorBlend synthesizes the conversation, checks constraints, and drafts a structured protocol.
                    </p>
                </div>
            </div>

            <!-- Step 3 -->
            <div style="display: flex; gap: var(--tb-space-16); align-items: flex-start;">
                <div class="tb-icon-container--sm tb-icon-container tb-icon-container--warning">
                    <TbIcon Icon="check-circle" Color="warning" Size="md" />
                </div>
                <div>
                    <h4 style="font-weight: 600; margin-bottom: var(--tb-space-4); color: var(--text-primary);">Deliver</h4>
                    <p style="color: var(--text-secondary); line-height: 1.6;">
                        Receive dosage-ready formulas, sourcing suggestions, and talking points for your clients.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Final CTA -->
<div class="tb-container" style="margin-bottom: var(--tb-space-64);">
    <div class="tb-card" style="text-align: center; padding: var(--tb-space-32) var(--tb-space-24);">
        <h2 class="tb-heading-lg" style="text-align: center;">
            Ready to craft a smarter supplement strategy?
        </h2>
        <p style="color: var(--text-secondary); line-height: 1.6; max-width: 520px; margin: 0 auto var(--tb-space-24);">
            Join practitioners and patients already using TailorBlend for personalized, evidence-based supplement recommendations.
        </p>
        <TbButton Variant="filled" Color="primary" @onclick="@(() => NavManager.NavigateTo("/chat"))" StartIcon="bolt">
            <span>Launch the consultant</span>
        </TbButton>
    </div>
</div>
