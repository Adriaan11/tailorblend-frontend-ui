<Router AppAssembly="@typeof(App).Assembly">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" />
    </Found>
    <NotFound>
        <PageTitle>Not found</PageTitle>
        <LayoutView Layout="@typeof(MainLayout)">
            <div class="max-w-sm mx-auto mt-8 p-6 bg-surface rounded-lg border border-surface-border shadow-md">
                <div class="flex items-center gap-3 mb-4 p-4 bg-red-50 dark:bg-red-950/20 rounded-lg border border-red-200 dark:border-red-800">
                    <TbIcon Icon="circle-exclamation" Color="error" Size="lg" />
                    <div class="text-sm font-medium text-red-800 dark:text-red-200">404 - Page not found</div>
                </div>
                <TbText Typo="body1" Class="mb-4">
                    Sorry, there's nothing at this address.
                </TbText>
                <a href="/" class="inline-flex items-center justify-center px-4 py-2 bg-tb-accent text-white rounded-lg font-medium transition-opacity hover:opacity-90">
                    Go Home
                </a>
            </div>
        </LayoutView>
    </NotFound>
</Router>
